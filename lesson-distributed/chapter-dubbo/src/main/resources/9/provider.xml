<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">



    <dubbo:application name="provider"/>

    <dubbo:registry  address="zookeeper://127.0.0.1:2181"/>

    <dubbo:protocol id="dubboId" port="20880" name="dubbo"/>
    <dubbo:protocol id="hessianId" port="8080" name="hessian"/>

    <dubbo:service interface="com.chapter.distributed.dubbo.service.IUserInfoService" ref="userInfoService"/>
    <dubbo:service interface="com.chapter.distributed.dubbo.service.ICacheService" ref="cacheService"/>


    <bean id="userInfoService" class="com.chapter.distributed.dubbo.provider.impl.UserInfoService"/>

    <bean id="cacheService" class="com.chapter.distributed.dubbo.provider.impl.CacheService"/>

</beans>